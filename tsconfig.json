{
  "compilerOptions": {
    // http://node.green/
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],
    "rootDir": "./",
    "removeComments": false,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "noUnusedParameters": false,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./"
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
